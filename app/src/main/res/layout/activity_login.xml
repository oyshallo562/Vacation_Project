<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_logo_icon"/>

    <ImageView
        android:id="@+id/buttonBackground1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_button_background1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="150dp"
        />

    <ImageView
        android:id="@+id/personLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_person_logo"
        app:layout_constraintStart_toStartOf="@id/buttonBackground1"
        app:layout_constraintTop_toTopOf="@id/buttonBackground1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />
    <ImageView
        android:id="@+id/boundaryLogo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo_boundary"
        app:layout_constraintStart_toEndOf="@id/personLogo"
        app:layout_constraintTop_toTopOf="@id/personLogo"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        />

    <EditText
        android:id="@+id/ID"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="이메일을 입력하세요."
        app:layout_constraintStart_toEndOf="@id/boundaryLogo1"
        app:layout_constraintTop_toTopOf="@id/buttonBackground1"
        app:layout_constraintBottom_toBottomOf="@id/buttonBackground1"
        android:background="#f4f4f4"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        />



    <ImageView
        android:id="@+id/buttonBackground2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_button_background2"
        app:layout_constraintTop_toBottomOf="@id/buttonBackground1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:id="@+id/passwordLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_password_logo"
        app:layout_constraintStart_toStartOf="@id/buttonBackground2"
        app:layout_constraintTop_toTopOf="@id/buttonBackground2"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="17dp"
        />

    <ImageView
        android:id="@+id/boundaryLogo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo_boundary"
        app:layout_constraintStart_toEndOf="@id/passwordLogo"
        app:layout_constraintStart_toStartOf="@id/boundaryLogo1"
        app:layout_constraintTop_toTopOf="@id/passwordLogo"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/PW"
        android:padding="15dp"
        android:inputType="textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 입력하세요."
        app:layout_constraintStart_toEndOf="@id/boundaryLogo2"
        app:layout_constraintTop_toTopOf="@id/buttonBackground2"
        app:layout_constraintBottom_toBottomOf="@id/buttonBackground2"
        android:background="#f4f4f4"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        />



    <ImageButton
        android:id="@+id/LoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_button"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/PW"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/LoginButton"
        app:layout_constraintBottom_toBottomOf="@id/LoginButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <ImageButton
        android:id="@+id/GotoSignupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_button"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/LoginButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/GotoSignupButton"
        app:layout_constraintBottom_toBottomOf="@id/GotoSignupButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



    <ImageView
        android:id="@+id/elseLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_login_else_word"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/GoogleLoginButton"
        android:layout_marginBottom="10dp"
        />

    <ImageButton
        android:id="@+id/GoogleLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_button"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="구글로 로그인"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/GoogleLoginButton"
        app:layout_constraintBottom_toBottomOf="@id/GoogleLoginButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>